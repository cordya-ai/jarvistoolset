# Zsh configuration file
# Load modular configuration system
source ~/.jarvistoolset/macos/configs/shell/zsh_configs/00_load_order.zsh

# Load configurations in the proper order
load_configs_in_order

# Load additional shell-specific configurations
source ~/.jarvistoolset/macos/configs/shell/zsh_exports
source ~/.jarvistoolset/macos/configs/shell/zsh_functions
source ~/.jarvistoolset/macos/configs/shell/zsh_options
source ~/.jarvistoolset/macos/configs/shell/zsh_prompt

# Load colors
source ~/.jarvistoolset/macos/configs/shell/colors/macos/zsh_colors

# Load autocomplete
fpath=(~/.jarvistoolset/macos/configs/shell/autocomplete/macos $fpath)

# Initialize autocomplete
autoload -Uz compinit
compinit

# Load other configurations
source ~/.jarvistoolset/macos/configs/shell/curlrc

# Load keybindings
if [[ -f ~/.jarvistoolset/macos/configs/shell/zsh_keybindings ]]; then
  source ~/.jarvistoolset/macos/configs/shell/zsh_keybindings
fi

# Load zsh_logout
if [[ -f ~/.jarvistoolset/macos/configs/shell/zsh_logout ]]; then
  source ~/.jarvistoolset/macos/configs/shell/zsh_logout
fi
